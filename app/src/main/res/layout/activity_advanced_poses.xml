<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Advanced_Poses"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageButton
                android:id="@+id/go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@drawable/back_btn"
                android:background="#00000000"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:padding="10dp"
            android:textColor="#ad8b73"
            android:textAlignment="center"
            android:text="Advanced Poses"
            android:textAllCaps="true"
            android:textSize="30dp"
             />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@drawable/layout_bg">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/quicksand_bold"
                android:text="BAKASANA"
                android:padding="25dp"
                android:textColor="#FEFAF6"
                android:textSize="25sp" />


            <Button
                android:id="@+id/btn1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/archivo_black"
                android:padding="10dp"
                android:text="Begin Now"
                android:textColor="#FEFAF6"
                android:textSize="20sp"
                android:layout_margin="20dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/bakasana" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/layout_bg"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIGEON POSE"
                android:fontFamily="@font/quicksand_bold"
                android:padding="25dp"
                android:textColor="#FEFAF6"
                android:textSize="25sp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/archivo_black"
                android:padding="10dp"
                android:text="Begin Now"
                android:textColor="#FEFAF6"
                android:textSize="20sp"
                android:layout_margin="20dp" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/pigeon"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/layout_bg"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DANCER POSE"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="25sp"
                android:textColor="#FEFAF6"
                android:padding="25dp"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/archivo_black"
                android:padding="10dp"
                android:text="Begin Now"
                android:textColor="#FEFAF6"
                android:textSize="20sp"
                android:layout_margin="20dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/dancer"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/layout_bg"
            android:layout_margin="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEATHER POSE"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="25sp"
                android:textColor="#FEFAF6"
                android:padding="25dp"/>
            <Button
                android:id="@+id/btn4"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/archivo_black"
                android:padding="10dp"
                android:text="Begin Now"
                android:textColor="#FEFAF6"
                android:textSize="20sp"
                android:layout_margin="20dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/feathered"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/layout_bg"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PEACOCK POSE"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="25sp"
                android:textColor="#FEFAF6"
                android:padding="25dp"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/archivo_black"
                android:padding="10dp"
                android:text="Begin Now"
                android:textColor="#FEFAF6"
                android:textSize="20sp"
                android:layout_margin="20dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/peacock"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/layout_bg"
            android:layout_margin="10dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIREFLY POSE "
                android:fontFamily="@font/quicksand_bold"
                android:textSize="25sp"
                android:textColor="#FEFAF6"
                android:padding="25dp"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/button_selector"
                android:fontFamily="@font/archivo_black"
                android:padding="10dp"
                android:text="Begin Now"
                android:textColor="#FEFAF6"
                android:textSize="20sp"
                android:layout_margin="20dp"/>

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/firefly"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>